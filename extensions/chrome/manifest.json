{
  "manifest_version": 3,
  "name": "JargoNaut",
  "version": "0.4.0",
  "description": "Navigate tech jargon with AI-powered explanations. Understand every tweet and post.",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://twitter.com/*",
    "https://x.com/*",
    "https://www.linkedin.com/*",
    "https://linkedin.com/*",
    "https://openrouter.ai/*"
  ],
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_icon": {
      "16": "icons/JargoNaut_Logo16px.png",
      "32": "icons/JargoNaut_Logo32px.png",
      "48": "icons/JargoNaut_Logo48px.png",
      "128": "icons/JargoNaut_Logo128px.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://twitter.com/*",
        "https://x.com/*",
        "https://www.linkedin.com/*",
        "https://linkedin.com/*"
      ],
      "js": ["src/content/content.js"],
      "css": ["src/content/content.css"]
    }
  ],
  "background": {
    "service_worker": "src/background/background.js"
  },
  "icons": {
    "16": "icons/JargoNaut_Logo16px.png",
    "32": "icons/JargoNaut_Logo32px.png",
    "48": "icons/JargoNaut_Logo48px.png",
    "128": "icons/JargoNaut_Logo128px.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["icons/JargoNaut_Sextant_Button48px.png"],
      "matches": [
        "https://twitter.com/*",
        "https://x.com/*",
        "https://www.linkedin.com/*",
        "https://linkedin.com/*"
      ]
    }
  ]
}